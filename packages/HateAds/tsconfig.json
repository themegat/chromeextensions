{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": false,
    "outDir": "dist",
    "rootDir": "./",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "chrome"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}